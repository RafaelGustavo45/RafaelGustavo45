comando=str(input('olá digite os comandos'))


if comando == 'help':
    ajuda= 'comando help: exibe a lista de comandos, version: exibe a versão, readme: exibe a documentação, date: exibe a data atual, pasta: exibe a pasta, diretorio: verifica se existe o diretorio digitado'
    print(ajuda)

if comando == 'version':
   version = '1.30'
   print(version)
   
if comando == 'readme':
    documentacao = 'colocar aqui a documentacao'
    print(documentacao)
    
if comando == 'date':
    from datetime import datetime
    print(datetime.today())
    
if comando == 'diretorio':
    import os
    diretorio = input('digite o diretorio')
    existe = os.path.exists(diretorio)
    print(existe)
